<article>
  
  <header>
    <h1><%= @project.name %></h1>
  </header>

  <h3>Description</h3>
  <p>
    <%= @project.description %>
  </p>

  <h3>Date Created</h3>
  <p>
    <%= @project.created_at.to_s(:default) %>
  </p>

  <h3>Pledging Ends On</h3>
  <p>
    <%= @project.pledging_ends_on %> (<%= format_pledging_end_date(@project) %>)<br/>
  </p>

  <h3>Category</h3>
  <p>
    <%= @project.category %>
  </p>

  <h3>Website</h3>
  <p>
    <%= @project.website %>
  </p>

  <h3>Target Amount</h3>
  <p>
    <%= number_to_currency(@project.target_pledge_amount) %>
  </p>



</article>