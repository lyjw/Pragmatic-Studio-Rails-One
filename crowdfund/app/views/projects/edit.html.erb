<%= form_for(@project) do |f| %>

  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name, size: 50 %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 50, rows: 7 %>
  </p>
  <p>
    <%= f.label :created_at %><br/>
    <%= f.datetime_field :created_at, size: 50 %>
  </p>
  <p>
    <%= f.label :pledging_ends_on %><br/>
    <%= f.date_select :pledging_ends_on %>
  </p>
  <p>
    <%= f.label :category %><br/>
    <%= f.text_field :category, size: 50 %>
  </p>
  <p>
    <%= f.label :website %><br/>
    <%= f.text_field :website, size: 50 %>
  </p>
  <p>
    <%= f.label :-+target_pledge_amount %><br/>
    <%= f.number_field :target_pledge_amount %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>